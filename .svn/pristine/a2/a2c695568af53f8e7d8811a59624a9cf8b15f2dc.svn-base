                </div><!--//form-group-->
                <div class="form-group email">
                    <label class="sr-only" for="confirm_password">确认密码</label>
                    <input id="confirm_password" name="confirm_password" class="form-control" placeholder="确认密码"
                           maxlength="10">
                </div><!--//form-group-->
                <div class="form-group email">
                    <label class="sr-only" for="code">手机验证码</label>
                    <div style="width: 30%;display: block;float: right;"><a id="btn-getcode"
                                                                            class="btn btn-theme btn-block" href="#"
                                                                            style="margin-top: 5px">获取验证码</a></div>
                    <div style="width: 65%;display: block;"><input id="code" name="code" class="form-control"
                                                                   placeholder="手机验证码"
                                                                   maxlength="4" type="number"></div>


                </div><!--//form-group-->
                <!--                        <button class="btn btn-theme btn-block" type="submit">立即注册</button>-->
