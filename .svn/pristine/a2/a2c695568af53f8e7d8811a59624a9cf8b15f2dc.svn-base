<script>
    $("#btn-register").click(function () {
        var phonenum = $("#phonenum").val();
        var password = $("#password").val();
        var confirm_password = $("#confirm_password").val();
        var code = $("#code").val();
        if (phonenum == "" || password == "" || confirm_password == "" || code == "") {
            layer.msg("注册信息都不可为空哦！");
            return;
        }

        if (password != confirm_password) {
            layer.msg("密码确认不一致！");
            return;
        }

        $.ajax({
            type: "post",
            data: {"phonenum": phonenum, "password": password, "confirm_password": confirm_password, "code": code},
            async: true,
            url: "/userRegister",
            dataType: 'text',
            success: function (msg) {
                if (msg == "ok") {
                    location.href = "/index";
                    return;
                } else {
                    layer.msg(msg)
                    return;
                }
            }
        })
    });


    $("#btn-getcode").click(function () {
        var phonenum = $("#phonenum").val();
        if (phonenum == "") {
            layer.msg("手机号不得为空");
            return;
        }
        if (phonenum.length != 11) {
            layer.msg("手机号长度不正确");
            return;
        }



        $.ajax({
            type: "post",
            data: {"phonenum": phonenum},
            async: true,
            url: "/getsmscode",
            dataType: 'text',
            success: function (msg) {
                if (msg == "ok") {
                    layer.msg("验证码已发送");

                    var time = 60;
                    var timeInterval = setInterval(function () {
                        console.log(time)
                        $("#btn-getcode").attr("disabled", true);
                        $("#btn-getcode").text(time+"秒");
                        time--;
                        if (time == 0) {
                            $("#btn-getcode").attr("disabled", false);
                            $("#btn-getcode").text("获取验证码");
                            clearInterval(timeInterval)
                        }
                    }, 1000);
                } else {
                    layer.msg(msg)
                }
            }
        })

    })
</script>







