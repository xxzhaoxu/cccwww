<script>
    $("#btn-login").click(function () {
        var phonenum = $("#phonenum").val();
        var pwd = $("#pwd").val();

        if (phonenum == "" || pwd == "") {
            alert("手机号或密码不得为空！");
            return false;
        }

        $.ajax({
            type: "post",
            data: {"phonenum": phonenum, "pwd": pwd},
            async: true,
            url: "/userLogin",
            dataType: 'text',
            success: function (data) {
                if(data=="ok"){
                    location.href="/index";
                    return;
                }else{
                    layer.msg(data)
                    return;
                }
            }
        })


    });


</script>







